{
  "name": "realitycheck",
  "version": "0.1.0",
  "description": "RealityCheck - Claude Code quality gate plugin that ensures task completion",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "realitycheck": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/cli/index.ts --bundle --platform=node --format=esm --outfile=dist/cli/bundle.js",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test",
    "setup": "bash scripts/setup.sh",
    "uninstall": "bash scripts/uninstall.sh",
    "install-hooks": "bash scripts/install-to-project.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "zod": "^3.22.0"
  }
}
